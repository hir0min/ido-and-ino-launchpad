{
  "scripts": {
    "clean": "npx hardhat clean",
    "chain": "npx hardhat node",
    "compile": "npx hardhat compile",
    "deploy": "npx hardhat run --network localhost scripts/deploy.ts",
    "deploy:rinkeby": "npx hardhat run --network rinkeby scripts/deploy.ts",
    "deploy:bsctest": "npx hardhat run --network testnet scripts/deploy.ts",
    "deploy:bscmain": "npx hardhat run --network mainnet scripts/deploy.ts",
    "upgrade:bsctest": "npx hardhat run --network testnet scripts/upgradeFactory.ts",
    "test": "npx hardhat test",
    "sol:prettier": "npx prettier --write ./contracts -l",
    "sol:linter": "solhint -f table ./contracts/**/*.sol -f table ./contracts/*.sol",
    "ts:prettier": "npx prettier --write ./test/*.ts && npx prettier --write ./scripts/*.ts",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.0",
